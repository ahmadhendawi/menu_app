<% content_for :title, "Restaurant Menu" %>
<%# a public guest page where only active menu items are shown%>
<div class="mt-0">
  <h1 class="text-2xl font-bold mb-5"><%= @restaurant.name %>'s menu</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @menu_items.each do |menu_item| %>
      <%= render partial: "menu_items/menu_item", locals: { menu_item: menu_item } %>
    <% end %>
  </div>
  <div>
    <%= link_to "View Cart", cart_path, class: "inline-block px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500" %>
    <%= link_to "Back to Home page", root_path, class:"inline-block px-4 py-2 bg-green-600 hover:bg-green-500 text-white font-medium rounded-md mb-5"%>
  </div>
</div>
