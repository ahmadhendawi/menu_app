<% content_for :title, "Checkout"%>
<div class="max-w-3xl mx-auto p-6 rounded-md shadow-md bg-white border-2 border-gray-400">
<h1 class="text-2xl font-bold mb-6">Checkout</h1>
<%= form_with model: @order, url: orders_path, local: true, class: "space-y-4 max-w-md" do |f| %>
  <div>
    <%= f.label :customer_name, "Your name", class: "block font-medium" %>
    <%= f.text_field :customer_name, class: "w-full mt-1 p-2 border rounded" %>
  </div>
  <div>
    <%= f.label :phone, "Phone number", class: "block font-medium" %>
    <%= f.telephone_field :phone, class: "w-full mt-1 p-2 border rounded" %>
  </div>
  <div class="mx-auto text-center">
    <%= f.submit "Place Order", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500" %>
  </div>
  <div class="mt-3 mx-auto text-center">
    <%= link_to "Back to Cart", cart_path, class: "px-4 py-2 bg-blue-600 rounded-md hover:bg-blue-500" %>
  </div>
<% end %>
</div>
