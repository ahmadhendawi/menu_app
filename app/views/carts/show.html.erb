<% content_for :title, "Cart" %>
<div class="max-w-3xl mx-auto p-6 rounded-md shadow-md bg-white border-2 border-gray-400">
<% if @cart_items.any? %>
  <ul class="space-y-3">
    <% @cart_items.each do |item| %>
      <li class="p-4 border rounded-md flex justify-between items-center">
        <div><%= item.name %> - $<%= item.price %></div>
        <%= button_to "Remove", remove_from_cart_path(item), method: :delete, class: "px-3 py-1 bg-red-600 text-white rounded-md hover:bg-red-500" %>
      </li>
    <% end %>
  </ul>

  <div class="mt-8">
    <p class="text-lg font-semibold">Total: $<%= @cart_items.sum(&:price) %></p>
  </div>

  <div class="mt-8 flex gap-2">
    <%= link_to "Continue Browsing", root_path, class: "px-3 py-2 text-white bg-blue-600 rounded hover:bg-blue-500 rounded-md" %>
    <%= link_to "Checkout", new_order_path, class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500" %>
  </div>
<% else %>
  <p>Your cart is empty.</p>
  <%= link_to "Browse Restaurants", root_path, class: "px-3 py-2 flex space-y-4 text-white bg-blue-600 rounded hover:bg-blue-500 rounded-md" %>
<% end %>
</div>