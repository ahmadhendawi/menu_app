<%= form_with(model: menu_item, class: "contents") do |form| %>
  <% if menu_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul class="list-disc ml-6">
        <% menu_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": menu_item.errors[:name].none?, "border-red-400 focus:outline-red-600": menu_item.errors[:name].any?}] %>
  <% if menu_item.errors[:name].any? %>
  <p class="text-red-600 text-sm mt-1"><%= menu_item.errors[:name].first %></p>
<% end %>

  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": menu_item.errors[:description].none?, "border-red-400 focus:outline-red-600": menu_item.errors[:description].any?}] %>
  <% if menu_item.errors[:description].any? %>
  <p class="text-red-600 text-sm mt-1"><%= menu_item.errors[:description].first %></p>
<% end %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": menu_item.errors[:price].none?, "border-red-400 focus:outline-red-600": menu_item.errors[:price].any?}] %>
  <% if menu_item.errors[:price].any? %>
  <p class="text-red-600 text-sm mt-1"><%= menu_item.errors[:price].first %></p>
  <% end %>
  </div>

  <div class="my-5">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, accept: "image/png,image/jpeg,image/jpg,image/gif", class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": menu_item.errors[:images].none?, "border-red-400 focus:outline-red-600": menu_item.errors[:images].any?}] %>
    <% if menu_item.errors[:images].any? %>
  <p class="text-red-600 text-sm mt-1"><%= menu_item.errors[:images].first %></p>
  <% end %>
  </div>
  <div class="my-5 flex items-center gap-2">
    <%= form.label :active %>
    <%= form.checkbox :active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": menu_item.errors[:active].none?, "border-red-400 focus:outline-red-600": menu_item.errors[:active].any?}] %>
    <% if menu_item.errors[:active].any? %>
  <p class="text-red-600 text-sm mt-1"><%= menu_item.errors[:active].first %></p>
<% end %>

  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": menu_item.errors[:position].none?, "border-red-400 focus:outline-red-600": menu_item.errors[:position].any?}] %>
    <% if menu_item.errors[:position].any? %>
  <p class="text-red-600 text-sm mt-1"><%= menu_item.errors[:position].first %></p>
<% end %>

  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
